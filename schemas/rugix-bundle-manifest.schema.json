            "slot"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "execute"
            },
            "handler": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "type",
            "handler"
          ]
